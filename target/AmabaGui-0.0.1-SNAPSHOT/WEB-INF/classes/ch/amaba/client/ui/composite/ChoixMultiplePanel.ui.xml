<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:npui="urn:import:ch.amaba.client.ui.composite">

	<ui:with type="ch.amaba.client.NameTokens"
		field="nameTokens"></ui:with>

<ui:style>
		.redBox {
			background-color: white;
			border: 1px solid red;
			height: 500px;
			width: 100%;
		}
		
		.cursor{
		  cursor:pointer;
		}
		
		.border {
			border: 1px solid black;
		}
		
		.border {
			border: 2px solid #145258;
			margin: 1px;
			padding: 1px;
		}
	</ui:style>
	
	<g:HorizontalPanel verticalAlignment="top"
		spacing='2' styleName='{style.border}'>
		<npui:SportListBox ui:field="sportListBox"></npui:SportListBox>
		<g:VerticalPanel ui:field="selectionHorizontalPanel" spacing="3"></g:VerticalPanel>
	</g:HorizontalPanel>

</ui:UiBinder> 