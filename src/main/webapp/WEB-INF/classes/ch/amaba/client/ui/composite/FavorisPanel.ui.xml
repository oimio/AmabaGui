<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.border {
			border: 1px solid blue;
			spacing: 2;
		}
	</ui:style>
	<g:VerticalPanel verticalAlignment="top" spacing="2"
		styleName='{style.border}'>
		<g:HTMLPanel>
			<table cellpadding='0' cellspacing='0'>
				<tr>
					<td>
						<g:Image url='images/mini.jpg' ui:field="image" />
					</td>
					<td>
						<g:VerticalPanel horizontalAlignment="right" spacing='1'>
							<g:HorizontalPanel spacing='4'>
								<g:Image url='images/courrier.png' styleName="cursor"
									ui:field="messageImage" title='Envoyer un message privÃ©' />
								<g:Image url='images/close_small.png' styleName="cursor"
									ui:field="fermerImage" title='Supprimer des favoris' />
							</g:HorizontalPanel>
							<g:Label ui:field="ageLabel" />
							<g:Label ui:field="cantonLabel" />
						</g:VerticalPanel>
					</td>
				</tr>
				<tr>
					<td colspan='2'>
						<g:Label ui:field="prenomLabel" />
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:VerticalPanel>
</ui:UiBinder> 