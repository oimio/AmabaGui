<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.border {
			border: 0px solid blue;
			spacing: 0;
		}
	</ui:style>
	<g:VerticalPanel verticalAlignment="top" spacing="2"
		styleName='{style.border}'>
		<g:HTMLPanel>
			<table cellpadding='0' cellspacing='0' width='60px'>
				<tr>
					<td width='50px'>
						<g:Image ui:field="image" />
					</td>
					<td width='15px'>
							<g:Image url='images/favoris.png' styleName="cursor"
								ui:field="flagPrincipaleImage" title='DÃ©finir comme photo du profil.' />
							<g:Image url='images/close_small.png' styleName="cursor"
								ui:field="supprimerImage" title='Supprimer cette photo' />
					</td>
				</tr>
				<tr>
					<td colspan='2'>
						<g:Label ui:field="infosLabel" />
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:VerticalPanel>
</ui:UiBinder> 