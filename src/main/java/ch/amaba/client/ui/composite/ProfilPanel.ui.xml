<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel>
		<table cellpadding='0' cellspacing='0' width='100%'>
			<tr valign='top'>
				<td width='62px' height='62px'>
					<g:Image ui:field="image" />
				</td>
				<td width='62px' height='62px'>
					<g:VerticalPanel spacing="2">
						<g:Label ui:field="prenom" />
						<g:Label ui:field="age" />
						<g:Label ui:field="canton" />
					</g:VerticalPanel>
				</td>
			</tr>
			<tr>
				<td colspan='2'>
					<g:HorizontalPanel spacing="2" width="100%"
						horizontalAlignment="center" verticalAlignment="middle">
						<g:Image styleName="cursor" url="images/ajouter.png"
							ui:field="ajouterImage" title="Ajouter à vos favoris" />
						<g:Image styleName="cursor" url="images/courrier.png"
							ui:field="messagePriveImage" title="Envoyer un message privé" />
						<g:Image styleName="cursor" url="images/infos.png"
							ui:field="infosImage" title="Afficher le profil détaillé" />
						
					</g:HorizontalPanel>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 